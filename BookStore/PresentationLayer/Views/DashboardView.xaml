<UserControl x:Class="PresentationLayer.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:PresentationLayer.Converters"
    Height="Auto" Width="Auto">
    <UserControl.Resources>
        <conv:BookWiseBooleanToVisibilityConverter x:Key="BookWiseBooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="32">
        <!-- Nếu là Customer: chỉ hiện thông báo đỏ, ẩn TabControl -->
        <TextBlock Text="Bạn không có quyền hành làm điều này !"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="Red"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="{Binding IsCustomer, Converter={StaticResource BookWiseBooleanToVisibilityConverter}}"/>
        <!-- Nếu là Admin/Staff/Customer: hiện TabControl -->
        <TabControl Margin="0,24,0,0"
                    Visibility="{Binding IsCustomer, Converter={StaticResource BookWiseBooleanToVisibilityConverter}, ConverterParameter=invert}">
            <!-- Tab Admin -->
            <TabItem Header="Admin"
                     Visibility="{Binding IsAdmin, Converter={StaticResource BookWiseBooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="🛡️ Bảng điều khiển Quản trị viên"
                               Style="{StaticResource PageTitle}"
                               Margin="0,0,0,24"/>
                    <!-- Tab Admin: 1 hàng 4 card -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,32,0,0" >
                        <Border CornerRadius="24" Margin="16" Padding="28" Background="#F8FAFC" Effect="{StaticResource CosmoShadow}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="64" Height="64" Margin="0,0,0,12">
                                    <Ellipse Fill="#06B6D4" />
                                    <TextBlock Text="📚" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Tổng số sách" Foreground="#06B6D4" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalBooks}" FontSize="40" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="24" Margin="16" Padding="28" Background="#F8FAFC" Effect="{StaticResource CosmoShadow}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="64" Height="64" Margin="0,0,0,12">
                                    <Ellipse Fill="#4F46E5" />
                                    <TextBlock Text="🧾" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Tổng số đơn hàng" Foreground="#4F46E5" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalOrders}" FontSize="40" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="24" Margin="16" Padding="28" Background="#F8FAFC" Effect="{StaticResource CosmoShadow}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="64" Height="64" Margin="0,0,0,12">
                                    <Ellipse Fill="#22C55E" />
                                    <TextBlock Text="💰" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Tổng doanh thu" Foreground="#22C55E" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <TextBlock>
                                    <Run Text="{Binding TotalRevenue, StringFormat={}{0:N0}}" FontSize="40" FontWeight="Bold" Foreground="#222"/>
                                    <Run Text=" đ" FontSize="32" FontWeight="Bold" Foreground="#222"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="24" Margin="16" Padding="28" Background="#F8FAFC" Effect="{StaticResource CosmoShadow}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="64" Height="64" Margin="0,0,0,12">
                                    <Ellipse Fill="#F59E42" />
                                    <TextBlock Text="👤" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Tổng số người dùng" Foreground="#F59E42" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalUsers}" FontSize="40" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <Button Style="{StaticResource CosmoButton}" Content="Quản lý Sách" Command="{Binding GoToBooksCommand}" Margin="8,0"/>
                        <Button Style="{StaticResource CosmoButton}" Content="Quản lý Đơn hàng" Command="{Binding GoToOrdersCommand}" Margin="8,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <!-- Tab Staff -->
            <TabItem Header="Staff"
                     Visibility="{Binding IsAdminOrStaff, Converter={StaticResource BookWiseBooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="🧑‍💼 Bảng điều khiển Nhân viên"
                               Style="{StaticResource PageTitle}"
                               Margin="0,0,0,24"/>
                    <!-- Tab Staff: 1 hàng 2 card -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,32,0,0" >
                        <Border CornerRadius="24" Margin="16" Padding="28" Background="#F8FAFC" Effect="{StaticResource CosmoShadow}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="64" Height="64" Margin="0,0,0,12">
                                    <Ellipse Fill="#06B6D4" />
                                    <TextBlock Text="📚" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Sách quản lý" Foreground="#06B6D4" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalBooks}" FontSize="40" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border CornerRadius="24" Margin="16" Padding="28" Background="#F8FAFC" Effect="{StaticResource CosmoShadow}">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <Grid Width="64" Height="64" Margin="0,0,0,12">
                                    <Ellipse Fill="#4F46E5" />
                                    <TextBlock Text="🧾" FontSize="36" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"/>
                                </Grid>
                                <TextBlock Text="Đơn hàng xử lý" Foreground="#4F46E5" FontSize="20" FontWeight="SemiBold" Margin="0,8,0,0" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalOrders}" FontSize="40" FontWeight="Bold" Foreground="#222" HorizontalAlignment="Center" Margin="0,8,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <Button Style="{StaticResource CosmoButton}" Content="Quản lý Sách" Command="{Binding GoToBooksCommand}" Margin="8,0"/>
                        <Button Style="{StaticResource CosmoButton}" Content="Quản lý Đơn hàng" Command="{Binding GoToOrdersCommand}" Margin="8,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
            <!-- Tab Customer -->
            <TabItem Header="Customer"
                     Visibility="{Binding IsStaffOrCustomer, Converter={StaticResource BookWiseBooleanToVisibilityConverter}}">
                <StackPanel>
                    <TextBlock Text="🧑‍🎓 Bảng điều khiển Khách hàng"
                               Style="{StaticResource PageTitle}"
                               Margin="0,0,0,24"/>
                    <UniformGrid Columns="2" Rows="1" Margin="0,0,0,24" HorizontalAlignment="Center">
                        <Border Background="{StaticResource CardBrush}" CornerRadius="12" Margin="12" Effect="{StaticResource CosmoShadow}">
                            <StackPanel Margin="16">
                                <TextBlock Text="🧾" FontSize="40" HorizontalAlignment="Center"/>
                                <TextBlock Text="Đơn hàng của tôi" FontSize="16" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding MyOrderCount}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource ForegroundBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <Border Background="{StaticResource CardBrush}" CornerRadius="12" Margin="12" Effect="{StaticResource CosmoShadow}">
                            <StackPanel Margin="16">
                                <TextBlock Text="📚" FontSize="40" HorizontalAlignment="Center"/>
                                <TextBlock Text="Sách đã mua" FontSize="16" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding MyBookCount}" FontSize="32" FontWeight="Bold" Foreground="{StaticResource ForegroundBrush}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                        <Button Style="{StaticResource CosmoButton}" Content="Đơn hàng của tôi" Command="{Binding GoToMyOrdersCommand}" Margin="8,0"/>
                        <Button Style="{StaticResource CosmoButton}" Content="Cập nhật thông tin" Command="{Binding GoToProfileCommand}" Margin="8,0"/>
                    </StackPanel>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>